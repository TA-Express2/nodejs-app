- var links = { 'Item1': '/link1', 'Item2': '/link2' }
- var userItems = { 'Profile': '/profile', 'Change password': '/changePassword', 'Marks': '/students/marks', 'Log out': '/logout' }

mixin dropdown-item(name, link)
  a.dropdown-item(href=link)= name

mixin nav-item(name, link)
  li.nav-item
    a.nav-link(href=link)= name
  
nav.navbar.navbar-fixed-top.navbar-light
  .container
    .navbar-brand 
      a.nav-link(href='/') Markbook
    if (user)
      ul.nav.navbar-nav.pull-right
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(data-toggle='dropdown',href='#',role='button') #{user.email}
            .dropdown-menu
              each val, key in userItems
                +dropdown-item(key, val)
    else
      ul.nav.navbar-nav.pull-right
        li.nav-item
          a.nav-link(href='/login') Log in
    //- if (user)
      //- if (user.role === 'admin' || user.role === 'teacher')
    ul.nav.navbar-nav.pull-right
      li.nav-item
        a.nav-link(href='/teachers') Teachers
    ul.nav.navbar-nav.pull-right
      li.nav-item
        a.nav-link(href='/students') Students
    ul.nav.navbar-nav.pull-right
      li.nav-item
        a.nav-link(href='/about') About
    ul.nav.navbar-nav.pull-right
      li.nav-item
        a.nav-link(href='/home') Home
